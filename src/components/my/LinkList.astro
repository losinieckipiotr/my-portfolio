---
const links = [
	{ label: 'Robota', href: '/' },
	{ label: '≈Åo Mnie', href: '/aboutme/' }
] as const;

interface Props {
	footer?: boolean;
  header?: boolean;
}

const { footer, header } = Astro.props;

---
<ul class:list={[ { footer, header } ]}>
  {
    links.map(({ label, href }) => (
      <li>
        <a
          href={href}
          aria-current={Astro.url.pathname === href}
        >
          {label}
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul {
		display: flex;
		width: 100%;
    flex-grow: 1;
    flex-shrink: 0;
    justify-content: center;
    flex-direction: column;
		gap: var(--text-md);

		margin: 0;
		padding: 0;
		font-size: var(--text-2xl);
		list-style: none;

    &.footer {
      flex-direction: row;
      font-size: var(--text-lg);
    }

    &.header {
      flex-direction: row;
      font-size: var(--text-base);
      flex-grow: unset;
      flex-shrink: unset;
    }
	}

	li {
		display: block;
		text-align: center;
	}

  a {
		font-family: var(--font-poppins);
		font-weight: 300;
		font-style: normal;
		text-decoration: none;
		text-align: center;
	}

	a[aria-current] {
		background-image: linear-gradient(currentColor,currentColor);
    background-repeat: repeat-x;
    background-size: 1px 1px;
    background-position: 0 84%;
	}
</style>
