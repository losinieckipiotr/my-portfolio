</BaseLayout>

<style>
	.layout {
		display: grid;
		grid-template-columns: auto;
		grid-template-rows: auto;
		grid-template-areas:
			"about"
			"contact"
			"follow";
	}

	.about {
		grid-area: about;

		& p {
			margin-top: var(--text-xl);
			margin-bottom: var(--text-xl);

			font-family: var(--font-acumin-pro);
			font-size: var(--text-md);
			font-weight: 500;
			line-height: calc(1.5*var(--text-md));
		}
	}

	.contact {
		grid-area: contact;

		padding-top: 0;

		& p {
			font-family: var(--font-poppins);
			font-size: var(--text-base);
			font-weight: 300;
			line-height: calc(1.2*var(--text-base));
		}
	}

	.follow {
		grid-area: follow;

		& .links {
			display: flex;
			flex-direction: column;

			& a {
				font-family: var(--font-poppins);
				font-size: var(--text-base);
				font-weight: 300;
				line-height: calc(1.5*var(--text-base));
			}
		}
	}

	h2 {
		font-family: var(--font-poppins);
		font-size: var(--text-base);
		font-weight: 300;
		line-height: calc(1.2*var(--text-base));
		margin-bottom: var(--text-base);
	}

	@media (min-width: 600px) {
		.layout {
			grid-template-columns: auto auto;
			grid-template-rows: auto 1fr;
			grid-template-areas:
				"about contact"
				"about follow";
			column-gap: var(--text-xl);
			row-gap: var(--text-lg);
		}

		.contact h2 {
			margin-bottom: var(--text-xl);
		}

		@media (min-width: 1280px) {
			.layout {
				grid-template-areas:
				". about about about about about about about about about contact ."
				". about about about about about about about about about follow .";
				grid-template-columns: repeat(12, 1fr);
				column-gap: var(--text-xl);
			}

			.about p {
				margin-top: var(--text-2xl);
				margin-bottom: var(--text-2xl);

				font-size: var(--text-lg);
			}
		}
	}
</style>
